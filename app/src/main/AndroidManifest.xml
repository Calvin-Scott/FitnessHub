<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.ac.lincoln.students.calvinscott13458203.fitnesshubv2">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".YogaActivity"
            android:label="@string/title_activity_yoga"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CardioActivity"
            android:label="@string/title_activity_cardio"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AbsActivity"
            android:label="@string/title_activity_abs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BeginnerActivity"
            android:label="@string/title_activity_beginner"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ExtremeActivity"
            android:label="@string/title_activity_extreme"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StaminaActivity"
            android:label="@string/title_activity_stamina"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".VideoWebActivity"
            android:label="@string/title_activity_video_web"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
